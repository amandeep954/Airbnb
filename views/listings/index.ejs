<% layout('./layouts/biolerplate') -%>
<body>
  <h3>Places to Wander</h3>
  <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
    <% for (let listing of listings) { %>
    <a href="/listings/<%= listing.id %>" class="text-decoration-none">
      <div class="card col">
        <!-- Image -->
        <img
          src="<%= listing.image.url %>"
          class="card-img-top"
          alt="listing-image"
          style="height: 20rem; object-fit: cover"
        />

        <div class="card-body">
          <p class="card-text">
            <b><%= listing.title %></b> <br />
            <% if (listing.price) { %> &#8377; <%=
            listing.price.toLocaleString("en-IN") %> /night <% } else { %>
            &#8377; N/A <% } %>
          </p>
        </div>
      </div>
    </a>
    <% } %>
  </div>
</body>
